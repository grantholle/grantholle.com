<script>
  function toggleClasses(el, classes) {
    for (const c of classes) {
      el.classList.toggle(c)
    }
  }
  function toggleVisibility(el) {
    const opacityClasses = ['opacity-0']

    if (el.classList.contains('invisible')) {
      el.classList.remove('invisible')
      toggleClasses(el, opacityClasses)
    } else {
      toggleClasses(el, opacityClasses)
      setTimeout(() => {
        el.classList.add('invisible')
      }, 250)
    }
  }

  document.getElementById('george').addEventListener('click', (el) => {
    toggleVisibility(document.getElementById('backdrop'))
    toggleVisibility(document.getElementById('bubble'))
    toggleClasses(document.getElementById('wrapper'), ['translate-y-[92%]', 'lg:hover:translate-y-[80%]', 'translate-y-[15%]'])
  })
</script>